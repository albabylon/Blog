@using Blog.Web.ViewModels.Account
@model LoginViewModel;

@{
    ViewData["Title"] = "Вход";
    ViewData["BodyClass"] = "fixed-nonsrocll-page";
}

<div class="d-flex align-items-center justify-content-center vh-100 body-forfooter">
    <div class="w-100" style="max-width: 360px;">
        <h1 class="text-center mb-4">Привет, заходи!</h1>

        <form method="post" asp-controller="Account" asp-action="Login">
            <input asp-for="Email" class="form-control mb-2">
            <input asp-for="Password" autocomplete="off" textMode="Password" class="form-control mb-2">
            <div class="form-check mb-2">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox">
                <label class="form-check-label">Запомнить</label>
            </div>
            <button asp-controller="Account" asp-action="Login" type="submit" class="w-100 btn btn-lg btn-primary">Войти</button>
            <a asp-area="" asp-controller="Account" asp-action="Register" class="d-flex justify-content-center mt-2">Нет аккаунта? Зарегистрируйся</a>
            <div asp-validation-summary="All" class="text-danger d-flex justify-content-center mt-2"></div>
        </form>
    </div>
</div>