@using Blog.Web.ViewModels.Account
@model LoginViewModel;

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="w-100" style="max-width: 360px;">
        <h1 class="text-center mb-4">Привет, заходи!</h1>

        <form method="post" asp-controller="Account" asp-action="Login">
            <input asp-for="Email" class="form-control mb-2">

            <input asp-for="Password" class="form-control mb-2">

            <div class="form-check mb-2">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox">
                <label class="form-check-label">Запомнить</label>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Войти</button>

            <div asp-validation-summary="All" class="text-danger d-flex justify-content-center mt-2"></div>
        </form>
    </div>
</div>